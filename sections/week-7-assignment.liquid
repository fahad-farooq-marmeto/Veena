{{ 'week-7-assignment.css' | asset_url | stylesheet_tag }}
<script src="{{ 'week-7-assignment.js' | asset_url }}" defer></script>
{{ 'splide.min.css' | asset_url | stylesheet_tag }}
<script src="{{ 'splide.min.js' | asset_url }}" defer></script>

<div class="hotspot-m-main-container__heading">Shop the look</div>
<div class="hotspot-m-main-container">
  <div id="toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    Product successfully added to your cart!
  </div>
  <div class="interactive-image-hotspot">
    <div class="parent-for-hotspot">
      <img
        src="{{ section.settings.background_image | img_url: '1024x1024' }}"
        alt="Interactive image"
        class="interactive-image__background"
        height=""
        width=""
      >
      {% for block in section.blocks %}
        <div class="hotspot" style="left: {{ block.settings.position_x }}%; top: {{ block.settings.position_y }}%;">
          <div class="hotspot__product-card">
            <img
              src="{{ block.settings.first_product.featured_image | img_url: '150x150' }}"
              alt="{{ block.settings.product.title }}"
              class="hotspot__product-card-image"
              height=""
              width=""
            >
            <div class="product-details">
              <div class="product-title">{{ block.settings.first_product.title }}</div>
              <div class="product-price">{{ block.settings.first_product.price | money_without_currency }}</div>
              <form action="/cart/add" method="post" class="add-to-cart-form">
                {% if block.settings.first_product.selected_variant %}
                  <input type="hidden" name="id" value="{{ block.settings.first_product.selected_variant.id }}">
                {% else %}
                  <input type="hidden" name="id" value="{{ block.settings.first_product.variants.first.id }}">
                {% endif %}
                <input type="submit" value="Add to Cart" class="btn btn-primary">
              </form>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="interactive-coll__slider-container">
      <section class="slider-section">
        <!-- Splide Slider for Products -->
        <div class="splide" id="product-slider">
          <div class="splide__track">
            <ul class="splide__list">
              {% for product in collections.all.products %}
                <li class="splide__slide">
                  <div class="splide_slide_card">
                    <img
                      src="{{ product.featured_image | img_url: '300x300' }}"
                      alt="{{ product.title }}"
                      width="300"
                      height="300"
                    >
                    <div>
                      <div class="product-vendor-text">{{ product.vendor }}</div>
                      <div class="product-title-text">{{ product.title }}</div>
                      <div class="product-rating">
                        <div class="rating">
                          {% assign rating = product.metafields.custom.rating | default: 0 %}
                          {% assign max_stars = 5 %}
                          {% for i in (1..max_stars) %}
                            {% if i <= rating %}
                              <!-- Filled Star -->
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                xmlns:xlink="http://www.w3.org/1999/xlink"
                                height="24px"
                                width="24px"
                                viewBox="0 0 53.867 53.867"
                                xml:space="preserve"
                              >
                                <polygon style="fill:#EFCE4A;" points="26.934,1.318 35.256,18.182 53.867,20.887 40.4,34.013 43.579,52.549 26.934,43.798 10.288,52.549 13.467,34.013 0,20.887 18.611,18.182"/>
                              </svg>

                            {% else %}
                              <!-- Empty Star -->
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                xmlns:xlink="http://www.w3.org/1999/xlink"
                                height="24px"
                                width="24px"
                                viewBox="0 0 53.867 53.867"
                                xml:space="preserve"
                              >
                                <polygon style="fill:#dddddf;" points="26.934,1.318 35.256,18.182 53.867,20.887 40.4,34.013 43.579,52.549 26.934,43.798 10.288,52.549 13.467,34.013 0,20.887 18.611,18.182"/>
                              </svg>
                            {% endif %}
                          {% endfor %}
                        </div>
                      </div>
                      <div class="price">
                        {% if product.compare_at_price > product.price %}
                          <span class="sale-price">{{ product.price | money_with_currency }}</span>
                          <span class="original-price">{{ product.compare_at_price | money_with_currency }}</span>
                        {% else %}
                          <span>{{ product.price | money_with_currency }}</span>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image with Hotspots",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "range",
          "id": "position_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "default": 50,
          "step": 1
        },
        {
          "type": "range",
          "id": "position_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "default": 50,
          "step": 1
        },
        {
          "type": "product",
          "id": "first_product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Image with Hotspots",
      "category": "Image"
    }
  ]
}
{% endschema %}

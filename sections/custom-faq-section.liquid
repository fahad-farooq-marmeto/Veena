{{ 'custom-faq-section.css' | asset_url | stylesheet_tag }}

<div class="faq-section">
  <h1 class="faq-section__heading">{{ section.settings.heading }}</h1>
  <p class="faq-section__description">
    Ensure that your FAQs are regularly updated based on common customer queries and changes in your business
    operations.
  </p>
  <div class="faq-section__container">
    {% for block in section.blocks %}
      <div class="faq-container__block">
        <details>
          <summary>
            <div class="faq-block__question">
              <h5>{{ block.settings.question }}</h5>
              <span class="question__toggle-icon">+</span>
            </div>
          </summary>
          <div class="faq-block__answer">{{ block.settings.answer }}</div>
        </details>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  let summaries = document.querySelectorAll('details summary');
  let previous = null;
  let previousIcon = null;
  summaries.forEach(function (summary) {
    summary.addEventListener('click', function () {
      var icon = summary.querySelector('.question__toggle-icon');

      if (previous == summary.parentNode) {
        previous.open = previous.open;
      } else {
        if (previous) {
          previous.open = false;
          previousIcon.textContent = '+';
        }
        previous = summary.parentNode;
        previousIcon = icon;
      }
      if (summary.parentNode.open) {
        icon.textContent = '+';
      } else {
        icon.textContent = '-';
      }
    });
  });
</script>

{% schema %}
{
  "name": "FAQ custom section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQ"
    }
  ],
  "blocks": [
    {
      "type": "assignment-faq-block",
      "name": "assignment-faq-block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "question",
          "default": "Business Formal Choices"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "answer",
          "default": "<p>Yes Business Formal Choices</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom-faq section"
    }
  ]
}
{% endschema %}

{{ 'captivating-section.css' | asset_url | stylesheet_tag }}
<div id="captivating-slider" class="product-slider">
  <div class="captivating-section-heading">
    <h1 class="captivating-section-heading">{{ section.settings.heading }}</h1>
    <a class="animated-rich-text__button" style="width: 126px; height: 40px;" href="{{ section.settings.button_link }}">
      <span class="animated-rich-text__button-label">{{- section.settings.button_label -}}</span>
    </a>
  </div>
  <div class="splide">
    <div class="splide__track">
      <ul class="splide__list">
        {% for block in section.blocks %}
          {% assign collection = block.settings.collection %}
          <li class="splide__slide captivating-splide-item">
            <div class="captivating--image-container">
              {% render 'responsive-picture', desktopImage: collection.image.src %}
            </div>
            <div class="captivating--content">
              <div>
                <a class="captivating-content--title" href="{{block.settings.button_link}}">
                  {{- block.settings.title -}}
                </a>
              </div>
              <div>
                <a class="captivating-animated-rich-text__button" href="{{block.settings.button_link}}">
                  <span class="captivating-animated-rich-text__button-label">{{- block.settings.button_label -}}</span>
                </a>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

<script defer src="{{"https://cdn.jsdelivr.net/npm/@splidejs/splide/dist/js/splide.min.js"}}"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var splideInstance = new Splide('#captivating-slider .splide', {
      type: 'slide',
      perPage: 5,
      autoplay: false,
      interval: 3000,
      gap: 20, // Gap between slides
      pagination: false,
      perMove: 1,
      breakpoints: {
        1000: {
          perPage: 3,
        },
        768: {
          perPage: 2,
        },
        480: {
          perPage: 2,
        },
      },
    }).mount();
  });
</script>

<style>
  .captivating-animated-rich-text__button {
    padding: 10px 20px;
    font-size: 16px;
    background-color: transparent;
    color: white;
    border-radius: 50px;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: color 0.6s;
    border: 1px solid #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 132px;
    height: 45px;
  }

  .captivating-animated-rich-text__button:hover {
    color: #d03c3f;
  }

  .captivating-animated-rich-text__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background-color: #fff;
    transition: left 0.4s ease;
    border-radius: 50px;
  }

  .captivating-animated-rich-text__button:hover::before {
    left: 0;
  }

  .captivating-animated-rich-text__button-label {
    z-index: 10;
    position: relative;
  }

  @media screen and (max-width: 1024px) {
    .captivating-animated-rich-text__description {
      font-size: 4rem;
    }
  }

  @media screen and (max-width: 762px) {
    .captivating-animated-rich-text__button {
      font-size: 12px;
      width: 100px;
      height: 40px;
      margin-top: 0.8rem;
    }

    .captivating-animated-rich-text__heading {
      font-size: 12px;
      margin-bottom: 0.8rem;
    }

    .captivating-animated-rich-text__description {
      font-size: 2.5rem;
    }
  }

  @media screen and (max-width: 500px) {
    .captivating-animated-rich-text__description {
      font-size: 2rem;
      gap: 0.8rem;
    }
  }

  .captivating-animated-rich-text__button {
    text-decoration: none;
  }
</style>


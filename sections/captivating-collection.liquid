  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "View  All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button url"
    }
  ],
  "blocks": [
    {
      "type": "captivating-block",
      "name": "captivating-block",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title",
          "default": "fashion"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "captivating section"
    }
  ]
}
{% endschema %}

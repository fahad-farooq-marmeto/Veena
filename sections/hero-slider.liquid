<link rel="stylesheet" href="{{ 'hero-slider.css' | asset_url }}">
<script src="{{ 'hero-slider.js' | asset_url }}" defer></script>

<div class="hero-slider">
  {% for block in section.blocks %}
    <div
      class="hero-slider__slide {% if forloop.first %}active{% endif %}"
      style="background-image: url('{{ block.settings.image_desktop | img_url: '1440x600' }}');"
    >
      <div class="hero-slider__content hero-slider__content--{{ block.settings.content_position }}">
        <div class="hero-slider__heading">
          <span class="hero-slider__bullet">â€¢</span>
          {{ block.settings.heading }}
        </div>
        <div class="hero-slider__description hero-slider__description--{{ block.settings.text_alignment }}">
          {{ block.settings.description }}
        </div>
        <a href="#" class="animated-rich-text__button">
          <span class="animated-rich-text__button-label">{{ block.settings.button_label }}</span>
        </a>
      </div>
    </div>
  {% endfor %}
  <div class="hero-slider__controls">
    <button class="hero-slider__prev">&#10094;</button>
    <button class="hero-slider__next">&#10095;</button>
    <div class="hero-slider__dots">
      {% for block in section.blocks %}
        <span
          class="hero-slider__dot {% if forloop.first %}active-dot{% endif %}"
          onclick="currentSlide({{ forloop.index0 }})"
        ></span>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "hero-slider",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image",
          "info": "Recommended dimensions: 1440 x 600"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Business Formal Choices"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Explore our new arrivals of business formal wear."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Explore Now"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "content_position",
          "label": "Content Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Image"
    }
  ]
}
{% endschema %}

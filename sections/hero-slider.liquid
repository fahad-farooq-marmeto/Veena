{{ 'hero-slider.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero-slider.js' | asset_url }}" defer></script>

<div class="hero-slider">
  {% for block in section.blocks %}
    <div
      class="slide {% if forloop.first %}active{% endif %}"
      style="background-image: url('{{ block.settings.image_desktop | img_url: '1440x600' }}');"
    >
      <div class="slide-content">
        <h1>{{ block.settings.heading }}</h1>
        <p>{{ block.settings.description }}</p>
        <a href="#" class="button">{{ block.settings.button_label }}</a>
      </div>
    </div>
  {% endfor %}
  <div class="slider-controls">
    <button class="prev-slide">&#10094;</button>
    <button class="next-slide">&#10095;</button>
    <div class="slide-dots">
      {% for block in section.blocks %}
        <span
          class="dot {% if forloop.first %}active-dot{% endif %}"
          onclick="currentSlide({{ forloop.index0 }})"
        ></span>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "hero slider",
  "tag": "section",
  "class": "hero-slider",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image",
          "info": "Recommended dimensions: 1440 x 600"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Business Formal Choices"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Explore our new arrivals of business formal wear."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Explore Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Image"
    }
  ]
}
{% endschema %}

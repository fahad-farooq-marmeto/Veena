{{ 'custom-assignment.css' | asset_url | stylesheet_tag }}
<script src="{{ 'custom-assignment.js' | asset_url }}" defer></script>

<div class="product-sections">
  <h1>Whats your top pick</h1>
  <button id="product-btn-c" class="product-button">{{ section.settings.button1_label }}</button>
  <button id="product-btn-l" class="product-button">{{ section.settings.button2_label }}</button>

  <div id="condoms" class="product-grid">
    {% for block in section.blocks %}
      {% if block.settings.product_tag == 'condoms' %}
        <div class="product-card" style="background-color: {{ block.settings.background_color }}">
          <h3>{{ block.settings.card_title }}</h3>
          <div class="image-container">
            {% if block.settings.image1 %}
              <img src="{{ block.settings.image1 | img_url: '300x300' }}" alt="" width="300" height="300">
            {% endif %}
            {% if block.settings.image2 %}
              <img src="{{ block.settings.image2 | img_url: '300x300' }}" alt="" width="300" height="300">
            {% endif %}
            {% if block.settings.image3 %}
              <img src="{{ block.settings.image3 | img_url: '300x300' }}" alt="" width="300" height="300">
            {% endif %}
          </div>
          <p>{{ block.settings.card_description }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div id="lubes" class="product-grid">
    {% for block in section.blocks %}
      {% if block.settings.product_tag == 'lubes' %}
        <div class="product-card" style="background-color: {{ block.settings.background_color }}">
          <h3>{{ block.settings.card_title }}</h3>
          <div class="image-container">
            {% if block.settings.image1 %}
              <img src="{{ block.settings.image1 | img_url: '300x300' }}" alt="" width="300" height="300">
            {% endif %}
            {% if block.settings.image2 %}
              <img src="{{ block.settings.image2 | img_url: '300x300' }}" alt="" width="300" height="300">
            {% endif %}
            {% if block.settings.image3 %}
              <img src="{{ block.settings.image3 | img_url: '300x300' }}" alt="" width="300" height="300">
            {% endif %}
          </div>
          <p>{{ block.settings.card_description }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Product Sections",
  "tag": "section",
  "class": "product-sections",
  "settings": [
    {
      "type": "text",
      "id": "button1_label",
      "label": "First Button Label",
      "default": "Condoms"
    },
    {
      "type": "text",
      "id": "button2_label",
      "label": "Second Button Label",
      "default": "Lubes"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image1",
          "label": "First Image (optional)",
          "info": "Optional - leave empty if not used"
        },
        {
          "type": "image_picker",
          "id": "image2",
          "label": "Second Image (optional)",
          "info": "Optional - leave empty if not used"
        },
        {
          "type": "image_picker",
          "id": "image3",
          "label": "Third Image (optional)",
          "info": "Optional - leave empty if not used"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "Product Title"
        },
        {
          "type": "textarea",
          "id": "card_description",
          "label": "Card Description",
          "default": "Description of the product."
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#FFFFFF"
        },
        {
          "type": "select",
          "id": "product_tag",
          "label": "Product Tag",
          "options": [
            {
              "value": "condoms",
              "label": "Condoms"
            },
            {
              "value": "lubes",
              "label": "Lubes"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  {% for block in section.blocks %}
    .custom .color-swatch--{{ block.settings.solid_color_name }}{
      height:2.5rem;
      width:2.5rem;
      border-radius:50%;
      {% if block.settings.swatch-image != blank %}
      background:url("{{ block.settings.swatch-image | img_url:"small" }}") fixed no-repeat center/cover;
      {% else %}
      background:{{ block.settings.solid_color }}!important;
      {% endif %}
    }
  {% endfor %}
</style>
{% schema %}
{
  "name": "Swatches",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "solid color",
      "type": "solid-color",
      "settings": [
        {
          "type": "text",
          "id": "solid_color_name",
          "label": "Solid color name"
        },
        {
          "type": "color",
          "id": "solid_color",
          "label": "Solid color"
        },
        {
          "type": "header",
          "content": "Add image for swatch"
        },
        {
          "type": "image_picker",
          "id": "swatch-image",
          "label": "Swatch image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Swatches"
    }
  ]
}
{% endschema %}

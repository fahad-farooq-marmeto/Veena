<style>
  .breadcrumbs li:not(:last-child):after {
    content: '›\00a0';
    display: inline-block;
    padding-left: 0.75ch;
    speak: none;
  }
  /* Equivalent CSS for Tailwind classes */

  /* .breadcrumbs */
  .breadcrumbs {
    width: 100%; /* page-width */
    font-size: 1.8rem; /* tw-text-[0.85em] */
    margin-top: 3rem; /* tw-my-3 */
  }

  /* .breadcrumbs li */
  .breadcrumbs li {
    display: inline-block;
  }

  /* .breadcrumbs li:not(:last-child):after */
  .breadcrumbs li:not(:last-child)::after {
    content: '›\00a0';
    display: inline-block;
    padding-left: 0.75ch;
    speak: none;
  }

  /* .tw-list-none */
  .tw-list-none {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
  }

  /* .tw-inline-block */
  .tw-inline-block a {
    color: black;
    text-decoration: none;
  }

  .tw-inline-block {
    display: inline-block;
  }

  /* .tw-underline */
  .tw-underline {
    text-decoration: underline;
  }

  /* .tw-no-underline */
  .tw-no-underline {
    text-decoration: none;
  }

  /* .tw-text-inherit */
  .tw-text-inherit {
    color: inherit;
  }

  /* .tw-font-[normal] */
  .tw-font-normal {
    font-weight: normal;
  }

  /* .tw-m-0 */
  .tw-m-0 {
    margin: 0;
  }

  /* .tw-p-0 */
  .tw-p-0 {
    padding: 0;
  }

  /* .tw-text-inherit */
  .tw-text-inherit {
    color: inherit;
  }

  /* .tw-font-[normal] */
  .tw-font-normal {
    font-weight: normal;
  }

  /* .hover:tw-underline */
  .hover\:tw-underline:hover,
  .hover\:tw-underline:focus {
    text-decoration: underline;
  }

  /* .focus:tw-underline */
  .focus\:tw-underline:focus {
    text-decoration: underline;
  }

  /* aria-current */
  [aria-current='page'] {
    /* Whatever styles you want for current page */
  }
</style>

{% unless template == 'index' or template == 'cart' or template == 'list-collections' or template == '404' %}
  {% assign t = template | split: '.' | first %}

  <nav class="breadcrumbs page-width tw-text-[0.85em] tw-my-3" role="navigation" aria-label="breadcrumbs">
    <ol class="tw-list-none tw-m-0 tw-p-0">
      <li class="tw-inline-block">
        <a class="tw-underline" href="/" title="Home">Home</a>
      </li>

      {% case t %}
        {% when 'page' %}
          <li class="tw-inline-block">
            <a
              class="tw-underline"
              href="{{ page.url }}"
              class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
              aria-current="page"
            >
              {{- page.title -}}
            </a>
          </li>

        {% when 'product' %}
          {% if collection.url %}
            <li class="tw-inline-block">
              {{ collection.title | link_to: collection.url }}
            </li>
          {% endif %}

          <li class="tw-inline-block">
            <a
              class="tw-underline"
              href="{{ product.url }}"
              class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
              aria-current="page"
            >
              {{- product.title -}}
            </a>
          </li>

        {% when 'collection' and collection.handle %}
          {% if current_tags %}
            <li class="tw-inline-block">{{ collection.title | link_to: collection.url }}</li>
            <li class="tw-inline-block">
              {% capture tag_url %}{{ collection.url }}/{{ current_tags | join: "+"}}{% endcapture %}
              <a
                class="tw-underline"
                href="{{ tag_url }}"
                class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
                aria-current="page"
              >
                {{- current_tags | join: ' + ' -}}
              </a>
            </li>
          {% else %}
            <li class="tw-inline-block">
              <a
                class="tw-underline"
                href="{{ collection.url }}"
                class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
                aria-current="page"
              >
                {{- collection.title -}}
              </a>
            </li>
          {% endif %}

        {% when 'blog' %}
          {% if current_tags %}
            <li class="tw-inline-block">{{ blog.title | link_to: blog.url }}</li>
            <li class="tw-inline-block">
              {% capture tag_url %}{{blog.url}}/tagged/{{ current_tags | join: "+" }}{% endcapture %}
              <a
                class="tw-underline"
                href="{{ tag_url }}"
                class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
                aria-current="page"
              >
                {{- current_tags | join: ' + ' -}}
              </a>
            </li>
          {% else %}
            <li class="tw-inline-block">
              <a
                class="tw-underline"
                href="{{ blog.url }}"
                class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
                aria-current="page"
              >
                {{- blog.title -}}
              </a>
            </li>
          {% endif %}

        {% when 'article' %}
          <li class="tw-inline-block">{{ blog.title | link_to: blog.url }}</li>
          <li class="tw-inline-block">
            <a
              class="tw-underline"
              href="{{ article.url }}"
              class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
              aria-current="page"
            >
              {{- article.title -}}
            </a>
          </li>

        {% else %}
          <li
            class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
            aria-current="page"
          >
            <a
              class="tw-underline"
              href="{{ request.path }}"
              class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline"
              aria-current="page"
            >
              {{- page_title -}}
            </a>
          </li>
      {% endcase %}
    </ol>
  </nav>
{% endunless %}
